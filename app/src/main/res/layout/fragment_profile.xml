<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#f5f5f5"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="50dp"
            app:cardElevation="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView

                android:id="@+id/img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/account" />
            <!--        <com.google.android.material.imageview.ShapeableImageView-->
            <!--            android:id="@+id/img"-->
            <!--            android:layout_width="70dp"-->
            <!--            android:layout_height="70dp"-->
            <!--            android:layout_gravity="center_vertical"-->
            <!--            android:layout_marginLeft="15dp"-->
            <!--            android:adjustViewBounds="true"-->
            <!--            android:outlineSpotShadowColor="@color/black"-->
            <!--            android:scaleType="centerCrop"-->
            <!--            android:src="@drawable/icon"-->
            <!--            app:shapeAppearanceOverlay="@style/roundimageview" />-->

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/user"
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"


                    android:layout_marginLeft="15dp"
                    android:background="@drawable/input_bg"
                    android:drawableLeft="@drawable/personne"
                    android:drawablePadding="10dp"
                    android:ems="17"
                    android:fontFamily="@font/aldrich"
                    android:hint="Name"
                    android:inputType="text"
                    android:paddingLeft="20dp"
                    android:paddingTop="13dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="13dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/white"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/txt_email"
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"


                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="9dp"
                    android:background="@drawable/input_bg"
                    android:drawableLeft="@drawable/email"
                    android:drawablePadding="10dp"
                    android:ems="17"
                    android:fontFamily="@font/aldrich"
                    android:hint="Name"
                    android:inputType="text"
                    android:paddingLeft="20dp"
                    android:paddingTop="13dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="13dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/white"
                    tools:ignore="MissingConstraints" />


            </LinearLayout>

            <Button
                android:id="@+id/button3"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_gravity="center|center_horizontal"
                android:layout_marginLeft="20dp"
                android:backgroundTint="@color/chibi"
                app:icon="@drawable/edit" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp">

            <Button
                android:id="@+id/ing_btn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:background="@android:color/transparent"
                android:backgroundTint="@color/chibi"
                android:fontFamily="@font/aldrich"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Mes recettes"
                android:textAllCaps="false"
                android:textColor="@color/chibi"
                android:textStyle="bold" />


            <Button
                android:id="@+id/steps_btn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:background="@android:color/transparent"
                android:backgroundTint="@color/brown"
                android:fontFamily="@font/aldrich"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Appréciées"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textStyle="bold" />


        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="300dp"

        android:background="#f5f5f5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ListView
            android:id="@+id/list_myrecipes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f5f5f5" />


        <ListView
            android:id="@+id/list_liked"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />


    </RelativeLayout>


</FrameLayout>



