<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".EditRecipeFragment"
    android:background="#f5f5f5">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:orientation="vertical"
        android:paddingTop="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/profle_name"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="20sp"
                android:layout_marginBottom="20sp"
                android:fontFamily="@font/lobster"
                android:gravity="center"
                android:text="Editer votre recette"
                android:textColor="@color/chibi"
                android:textSize="26sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                app:cardCornerRadius="5dp">

                <EditText
                    android:id="@+id/name_add_new"
                    style="@style/Widget.Material3.AutoCompleteTextView.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:fontFamily="@font/aldrich"
                    android:hint="Nom"
                    android:inputType="text" />
            </androidx.cardview.widget.CardView>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="8dp"
                android:scrollbars="none" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:chipSpacingHorizontal="8dp"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:checkable="true"
                    android:fontFamily="@font/aldrich"
                    android:text="Plat principal"
                    android:textColor="@color/white"
                    app:checkedIconVisible="true"
                    app:chipBackgroundColor="@color/kahwi"
                    app:chipCornerRadius="20dp"
                    app:chipStrokeColor="@color/kahwi" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip5"
                    style="@style/Widget.Material3.Chip.Filter.Elevated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/aldrich"
                    android:text="Boisson"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/white"
                    app:chipBackgroundColor="@color/kahwi"
                    app:chipCornerRadius="20dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip6"
                    style="@style/Widget.Material3.Chip.Filter.Elevated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/aldrich"
                    android:text="EntrÃ©e"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/white"
                    app:chipBackgroundColor="@color/kahwi"
                    app:chipCornerRadius="20dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip7"
                    style="@style/Widget.Material3.Chip.Filter.Elevated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/aldrich"
                    android:text="Dessert"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/white"
                    app:chipBackgroundColor="@color/kahwi"
                    app:chipCornerRadius="20dp" />
            </com.google.android.material.chip.ChipGroup>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginBottom="20sp">

                <!-- Image avec effet de couleur -->
                <ImageView
                    android:id="@+id/photo_placeholder"
                    android:layout_width="252dp"
                    android:layout_height="110sp"
                    android:layout_alignParentStart="true"
                    android:background="@color/white"

                    android:scaleType="centerCrop" />


                <Button
                    android:id="@+id/btn_scatta"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_alignBottom="@id/photo_placeholder"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="-1dp"
                    android:layout_marginBottom="14dp"
                    android:backgroundTint="@color/chibi"
                    android:drawableTop="@drawable/dd"
                    android:fontFamily="@font/aldrich" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">


                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chip_group1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:chipSpacingHorizontal="8dp"
                    app:singleSelection="true">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipF"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20sp"
                        android:checkable="true"
                        android:fontFamily="@font/aldrich"
                        android:text="Facile"
                        android:textColor="@color/white"
                        app:checkedIconVisible="true"
                        app:chipBackgroundColor="@color/kahwi"
                        app:chipCornerRadius="20dp"
                        app:chipStrokeColor="@color/kahwi" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipM"
                        style="@style/Widget.Material3.Chip.Filter.Elevated"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/aldrich"
                        android:text="Moyen"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/white"
                        app:chipBackgroundColor="@color/kahwi"
                        app:chipCornerRadius="20dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipD"
                        style="@style/Widget.Material3.Chip.Filter.Elevated"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/aldrich"
                        android:text="Difficile"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/white"
                        app:chipBackgroundColor="@color/kahwi"
                        app:chipCornerRadius="20dp" />


                </com.google.android.material.chip.ChipGroup>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="5dp">

                    <EditText
                        android:id="@+id/ing_add"
                        style="@style/Widget.Material3.AutoCompleteTextView.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:fontFamily="@font/aldrich"
                        android:hint="IngrÃ©dients"
                        android:inputType="text|textMultiLine" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"

                    android:layout_marginRight="5dp"
                    app:cardCornerRadius="5dp">

                    <EditText
                        android:id="@+id/methode_add"
                        style="@style/Widget.Material3.AutoCompleteTextView.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:fontFamily="@font/aldrich"
                        android:hint="Methode"
                        android:inputType="text|textMultiLine" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="5dp"
                    app:cardCornerRadius="5dp">

                    <EditText
                        android:id="@+id/time_add"
                        style="@style/Widget.Material3.AutoCompleteTextView.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:fontFamily="@font/aldrich"
                        android:hint="temps (min)"
                        android:inputType="number" />


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="5dp"
                    app:cardCornerRadius="5dp">

                    <EditText
                        android:id="@+id/calo_add"
                        style="@style/Widget.Material3.AutoCompleteTextView.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:fontFamily="@font/aldrich"
                        android:hint="calories"
                        android:inputType="number" />


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="5dp"
                    app:cardCornerRadius="5dp">

                    <EditText
                        android:id="@+id/proteins_add"
                        style="@style/Widget.Material3.AutoCompleteTextView.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:fontFamily="@font/aldrich"
                        android:hint="proteines"
                        android:inputType="number" />


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="5dp"
                    app:cardCornerRadius="5dp">


                    <EditText
                        android:id="@+id/lipides_add"
                        style="@style/Widget.Material3.AutoCompleteTextView.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:fontFamily="@font/aldrich"
                        android:hint="lipides"
                        android:inputType="number" />


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="5dp"
                    app:cardCornerRadius="5dp">


                    <EditText
                        android:id="@+id/glucides"
                        style="@style/Widget.Material3.AutoCompleteTextView.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:fontFamily="@font/aldrich"
                        android:hint="glucides"
                        android:inputType="number" />


                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <Button
                android:id="@+id/btn_save_recipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50sp"
                android:layout_marginTop="50sp"
                android:layout_marginRight="50sp"
                android:layout_marginBottom="30sp"
                android:backgroundTint="@color/chibi"
                android:fontFamily="@font/aldrich"
                android:text="Enregister" />
        </LinearLayout>

    </ScrollView>
</FrameLayout>